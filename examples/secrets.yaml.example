# ============================================================
# secrets.yaml - Example Configuration
# ============================================================
# Copy this file to your ESPHome config directory and update
# with your actual values.
#
# Location:
#   Home Assistant: /config/esphome/secrets.yaml
#   Standalone: ~/.esphome/secrets.yaml or ./secrets.yaml
# ============================================================

# WiFi Configuration
wifi_ssid: "YourWiFiNetworkName"
wifi_password: "YourWiFiPassword"

# OTA (Over-The-Air) Updates
ota_password: "YourSecurePassword123"

# Home Assistant API (generate with: esphome wizard)
api_encryption_key: "abcd1234efgh5678ijkl9012mnop3456qrst7890uvwx1234"

# Snapcast Server
snapserver_host: "192.168.1.100"  # IP address or hostname of your Snapcast server

# Optional: MQTT (if using MQTT integration)
# mqtt_broker: "192.168.1.100"
# mqtt_username: "esphome"
# mqtt_password: "mqtt_password"
